<!-- FIX SHOW SINGLE -->
<h2>FIX:</h2>
<h2><%= @fix.title %></h2>

<p><%= markdown( @fix.steps ) unless @fix.steps.nil? %></p>

<p class="updated-time">Last updated <%= time_ago_in_words @fix.updated_at %> ago</p>

<h3>This fix relates to:</h3>
<ul>
  <% @fix.issues.each do |i| %>
    <li><%= link_to i.summary, issue_path(i.id) %></li>
  <% end %>
</ul>

<h3>This fix involves:</h3>
<ul>
  <% @fix.technologies.each do |t| %>
    <li><%= link_to t.name, technology_path(t.id) %></li>
  <% end %>
</ul>



<div class="controls">
  <%= link_to 'Edit Fix', edit_fix_path(@fix.id) %>
  <%= link_to 'Delete Fix', @fix, :method => "delete", :data => { :confirm => "Are you sure you want to permanently delete this fix?" } %>
</div>
