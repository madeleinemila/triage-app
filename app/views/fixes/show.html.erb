<!-- FIX SHOW SINGLE -->
<div class="show-container">
  <h2 class="fix-slash">FIX: <%= @fix.title %></h2>
  <p class="updated-time">Last updated <%= time_ago_in_words @fix.updated_at %> ago</p>
</div>


<div class="lower-container">
    <div class="md">
      <h3>PROCEDURE</h3>
      <%= markdown( @fix.steps ) unless @fix.steps.nil? %>
    </div>

  <div class="inner-bound">



    <h3>This fix relates to this issue:</h3>
    <ul class="all-list issue-list">
      <% @fix.issues.each do |i| %>
        <li><%= link_to i.summary, issue_path(i.id) %></li>
      <% end %>
    </ul>

    <h3>This fix involves the following tech:</h3>
    <ul class="all-list tech-list">
      <% @fix.technologies.each do |t| %>
        <li><%= link_to t.name, technology_path(t.id) %></li>
      <% end %>
    </ul>


    <div class="controls controls-tech">
      <%= link_to "Back to All Fixes", fixes_path %>
    </div>
    <!-- ADMIN CONTROLS -->
    <%= render partial: "shared/admin_ctrl" %>

  </div>
  <div class="pin-controls" id="pin-update-f">
    <%= render partial: "pin" %>
  </div>
</div>
