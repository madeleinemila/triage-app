<div class="large-search">
  <%= form_tag(@search[:path], method: :get) do %>
    <%= text_field_tag 'term', params[:term], :autofocus => true, placeholder: "#{@search[:type]}", class: "search sentence" %>
    <span class="slash <%= "#{@search[:class]}" %>">/</span>
    <!-- <%= submit_tag "Search #{@search[:type]}" %> -->
    <%= button_tag(type: 'submit', class: "btn submit", id: 'mag-glass-main') do %>
      <%= image_tag 'mag-white.png', class: "mag" %>
    <% end %>
    <%= link_to 'X', @search[:path], class: "clear-search x-#{@search[:class]}" %>
  <% end %>
</div>
