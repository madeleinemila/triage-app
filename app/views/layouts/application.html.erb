<!DOCTYPE html>
<html>
  <head>
    <title>Triage</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Home', root_path %>
      <%= link_to 'Browse All Issues', issues_path %>
      <%= link_to 'Browse All Fixes', fixes_path %>
      <%= link_to 'Browse All Tech', technologies_path %>
      <% if (@current_user.present? && @current_user.admin?) %>
        <%= link_to 'New Issue', new_issue_path %>
        <%= link_to 'New Fix', new_fix_path %>
        <%= link_to 'New Tech', new_technology_path %>
        <%= link_to 'All Users', users_path %>
      <% end %>
      <% if @current_user.present? %>
        <%= link_to 'Edit Profile', edit_user_path(@current_user) %>
        <%= link_to 'Logout', login_path, :method => 'delete' %>
        Logged in as: <%= @current_user.name %>
      <% else %>
        <%= link_to 'Login', login_path  %>
        <%= link_to 'Sign Up', new_user_path  %>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
