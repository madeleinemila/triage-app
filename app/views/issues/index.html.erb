<!-- SEARCH ISSUES-->
<%= render partial: "shared/single_search" %>
<!------>


<% if params[:term] %>
  <ul class=god-results>
    <% @issues.each do |i| %>
      <li>
        <%= link_to i.summary, issue_path(i.id), class: "green-hover monospace" %>
      </li>
    <% end %>
    <% if flash[:notice] && !@issues.any? %>
      <li><%= flash[:notice] %></li>
    <% end %>
  </ul>
<% end %>

<div class="lower-container">
  <div class="inner-bound">
    <h2>All Issues A-Z</h2>

    <ul class="all-list issue-list">
      <% @issues_all.each do |i| %>
        <li>
          <%= link_to i.summary, issue_path(i.id) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
