<!-- ISSUES SHOW SINGLE -->
<h2><%= @issue.summary %></h2>

<p><%= simple_format( @issue.details ) %></p>


<h2>Fixes</h2>

<ul>
<% @issue.fixes.each do |f| %>
  <li>
    <%= link_to f.title, fix_path(f.id) %>
  </li>
<% end %>
</ul>

<p class="updated-time">Last updated <%= time_ago_in_words @issue.updated_at %> ago</p>

<div class="controls">
  <%= link_to 'Edit Issue', edit_issue_path(@issue.id) %>
  <%= link_to 'Delete Issue', @issue, :method => "delete", :data => { :confirm => "Are you sure you want to permanently delete this issue?" } %>
</div>
