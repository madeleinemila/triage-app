<div class="form-inner-bound">
    <h1 class="user-form-heading">SIGN UP</h1>

    <div class="new-user-info">
      <p class="user-form-heading">Create an account to pin entries to your home page</p>
      <p class="user-form-heading notice">
          <% if @user.errors.any? %>
            Please try again:
            <%=  @user.errors.full_messages.join(', ').downcase %>
          <%# else %>
            <!-- <p>&nbsp;</p> -->
          <% end %>
      </p>
      <%= form_for @user do |f| %>
        <fieldset>
              <%= f.text_field :name, :autofocus => true, :placeholder => "Name" %>
        </fieldset>
        <fieldset>
              <%= f.email_field :email, :placeholder => "Email" %>
        </fieldset>
        <fieldset>
              <%= f.password_field :password, :placeholder => "Enter a password, minimum 6 characters" %>
        </fieldset>
        <fieldset>
              <%= f.password_field :password_confirmation, :placeholder => "Retype password" %>
        </fieldset>
        <fieldset>
              <label></label>
              <%= f.submit "Create account" %>
        </fieldset>
      <% end %>


    </div>
</div>

<script type="text/javascript">
     bgBlur();
</script>
